            <label class="form-label">Email</label>
            <input type="text" class="form-control" value="<%= @customer.email%>" readonly>            
          </div>
          <div class="mb-3">
            <label class="form-label">Phone</label>
            <input type="number" class="form-control" value="<%= @customer.phone%>" readonly>            
          </div>
          <div class="d-flex justify-content-between">
            <div class="">
              <%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-warning" %>
            </div>
            <div class="invisible">
              <%= button_to "Destroy this customer", @customer, method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
          <div class="mt-2">
            <%= button_to "Destroy this customer", @customer, method: :delete, class: "btn btn-danger" %>
          </div> 
        </form>
      </div>
    </div>
