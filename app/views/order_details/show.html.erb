<!--<%= render "navbar" %>-->

<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>

  <% render @order_detail %>

  <div>
    <% link_to "Edit this order detail", edit_order_detail_path(@order_detail) %> <!-- | -->
    <% link_to "Back to order details", order_details_path %>

    <% button_to "Destroy this order detail", @order_detail, method: :delete %>
  </div>

  <div class="row">    
    <div class="card col-md-8 mx-auto">
      <div class="card-body">
        <form>          
          <div class="d-flex justify-content-between">
            <div><legend>Detail</legend></div>
          <div><%= link_to "Back to order", orders_path, class: "btn-sm btn-secondary" %>&nbsp;<%= link_to "Back to order_details", order_details_path, class: "btn-sm btn-secondary" %></div>
          </div>
          <div class="mb-3">
            <label class="form-label">Food ID</label>
            <input type="text" class="form-control" value="<%= @order_detail.food_id %>" readonly>            
          </div>
          <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" value="<%= @order_detail.price %>" readonly>            
          </div>
          <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input type="text" class="form-control" value="<%= @order_detail.quantity %>" readonly>            
          </div>
          <div class="d-flex justify-content-between">            
            <div class="">
              <%= link_to "Edit this order_detail", edit_order_detail_path(@order_detail), class: "btn btn-warning" %>
            </div>
            <div class="invisible">
              <%= button_to "Destroy this order_detail", @order_detail, method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
          <div class="mt-2">
            <%= link_to "Add order_detail food", new_order_detail_path(@order_detail), class: "btn btn-primary" %>
          </div>
          <div class="mt-2">
            <%= button_to "Destroy this order_detail", @order_detail, method: :delete, class: "btn btn-danger" %>
          </div> 
        </form>
      </div>
    </div>
  </div>
</div>