<%= form_with(model: order) do |form| %>
  <% if order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">    
    <div class="card col-md-8 mx-auto">
      <div class="card-body">
        <form>
          <div class="d-flex justify-content-end">
          <%= link_to "Back to orders", orders_path, class: "btn-sm btn-secondary " %>
          </div>
          <div class="mb-3 mt-2">
            <%= form.label :customer_email, style: "display: block", class: "form-label" %>
            <%= form.text_field :customer_id, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :order_date, style: "display: block", class: "form-label" %>
            <%= form.date_field :order_date, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :status, style: "display: block", class: "form-label" %>
            <%= form.select :status, ['NEW', 'PAID', 'CANCELED'], {prompt: 'Select status'}, {class: "form-control"} %>
          </div>          
          <div>
            <%= form.submit :submit, class: "btn btn-primary" %>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
