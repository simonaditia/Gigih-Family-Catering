<%= render "navbar" %>

<div class="container mt-5">
  <div class="row">
    <div class="mx-auto">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>

  <% render @order %>

  <div>
    <% link_to "Edit this order", edit_order_path(@order) %> <!-- | -->
    <% link_to "Back to orders", orders_path %>

    <% button_to "Destroy this order", @order, method: :delete %>
  </div>

  <div class="row">    
    <div class="card col-md-8 mx-auto">
      <div class="card-body">
        <form>          
          <div class="d-flex justify-content-between">
            <div><legend>Detail</legend></div>
          <div><%= link_to "Back to orders", orders_path, class: "btn-sm btn-secondary" %></div>
          </div>
          <div class="mb-3">
            <label class="form-label">Customer Name</label>
            <input type="text" class="form-control" value="<%= @order.customer_id %>" readonly>            
          </div>
          <div class="mb-3">
            <label class="form-label">Order Date</label>
            <input type="text" class="form-control" value="<%= @order.order_date %>" readonly>            
          </div>
          <div class="mb-3">
            <label class="form-label">Status</label>
            <input type="text" class="form-control" value="<%= @order.status %>" readonly>            
          </div>
          <div class="d-flex justify-content-between">            
            <div class="">
              <%= link_to "Edit this order", edit_order_path(@order), class: "btn btn-warning" %>
            </div>
            <div class="invisible">
              <%= button_to "Destroy this order", @order, method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
          <div class="mt-2">
            <%= link_to "Add order food", new_order_detail_path(@order_detail), class: "btn btn-primary" %>
          </div>
          <div class="mt-2">
            <%= button_to "Destroy this order", @order, method: :delete, class: "btn btn-danger" %>
          </div> 
        </form>
      </div>
    </div>
  </div>
</div>