<%= render "navbar" %>
<div class="container mt-3">
  <div class="row">
    <div class="mx-auto">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>
  <div class="d-flex justify-content-between mt-1">
    <div class="">
      <%= link_to "New order", new_order_path, class: "btn btn-success" %>
    </div>
    <div class="">
      <%= link_to "All Detail Orders", order_details_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div id="orders" class="mt-2 mb-5">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Date</th>
          <th scope="col">Customer Email</th>
          <th scope="col">Status</th>
          <th scope="col">Total</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <% 
        i = 0
        @orders.each do |order| 
        %>
          <tr>
            <td><%= i += 1 %></td>
            <td><%= order.order_date %></td>
            <td><%= order.find_customer %></td>
            <td><%= order.status %></td>
            <td><%= order.count_total_price %></td>
            <td><%= link_to "Order Food", new_order_detail_path %> | <%= link_to "Detail", order %> | <%= link_to "Detail Order", "order_details/?id=#{order.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
</div>